param "intensity";
name "Intensity";
desc "";
type "slider";

param "lightcolor";
name "Light Color";
desc "";

param "__nondiffuse";
name "Non Diffuse";
desc "";
type "bool";

param "__nonspecular";
name "Non Specular";
desc "";
type "bool";

param "lightID";
