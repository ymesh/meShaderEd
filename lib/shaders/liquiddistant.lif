	name "Samples";
	desc "";
	type "selector";
	range [ 8 8 16 16 32 32 64 64 ];

	param "shadowfiltersize";
	name "Filter Size";
	desc "";
	type "slider";
	range [ 0 1 ];

	param "shadowcolor";
	name "Shadow Color";
	desc "";

